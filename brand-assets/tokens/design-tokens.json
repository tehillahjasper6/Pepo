{
  "brand": {
    "name": "PEPO",
    "tagline": "Give Freely. Live Lightly.",
    "mascot": "Pepo the Bee"
  },
  "colors": {
    "primary": {
      "50": "#FFF9E6",
      "100": "#FFF3CC",
      "200": "#FFE799",
      "300": "#FFDB66",
      "400": "#FFD15C",
      "500": "#F4B400",
      "600": "#E6A800",
      "700": "#CC9600",
      "800": "#B38400",
      "900": "#996F00"
    },
    "secondary": {
      "50": "#E6F7EE",
      "100": "#CCEFDD",
      "200": "#99DFBB",
      "300": "#66CF99",
      "400": "#8AD4AE",
      "500": "#6BBF8E",
      "600": "#5AAC7D",
      "700": "#4A996C",
      "800": "#39865B",
      "900": "#29734A"
    },
    "neutral": {
      "800": "#2C2C2C",
      "900": "#1E1E1E"
    },
    "background": {
      "default": "#FFF9EE",
      "card": "#FFFFFF"
    },
    "semantic": {
      "info": "#6FAED9",
      "success": "#6BBF8E",
      "warning": "#F28B82",
      "error": "#E74C3C"
    }
  },
  "typography": {
    "fontFamily": {
      "primary": "Poppins, system-ui, -apple-system, sans-serif",
      "secondary": "Nunito, system-ui, -apple-system, sans-serif"
    },
    "fontSize": {
      "h1": "32px",
      "h2": "24px",
      "h3": "18px",
      "body": "16px",
      "caption": "12px"
    },
    "fontWeight": {
      "regular": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700
    },
    "lineHeight": {
      "tight": 1.2,
      "normal": 1.5,
      "relaxed": 1.8
    }
  },
  "spacing": {
    "1": "4px",
    "2": "8px",
    "3": "12px",
    "4": "16px",
    "5": "20px",
    "6": "24px",
    "8": "32px",
    "10": "40px"
  },
  "borderRadius": {
    "small": "8px",
    "medium": "12px",
    "large": "20px",
    "button": "16px"
  },
  "shadows": {
    "soft": "0 2px 8px rgba(0, 0, 0, 0.08)",
    "medium": "0 4px 12px rgba(0, 0, 0, 0.12)",
    "card": "0 2px 16px rgba(0, 0, 0, 0.06)"
  },
  "motion": {
    "duration": {
      "instant": "100ms",
      "fast": "200ms",
      "normal": "300ms",
      "slow": "500ms",
      "verySlow": "800ms"
    },
    "easing": {
      "easeIn": "cubic-bezier(0.4, 0, 1, 1)",
      "easeOut": "cubic-bezier(0, 0, 0.2, 1)",
      "easeInOut": "cubic-bezier(0.4, 0, 0.2, 1)",
      "bounce": "cubic-bezier(0.68, -0.55, 0.265, 1.55)"
    }
  },
  "animations": {
    "idle": {
      "duration": "3000ms",
      "loop": true,
      "intensity": 0.3
    },
    "celebrate": {
      "duration": "2500ms",
      "loop": false,
      "intensity": 1.0
    },
    "give": {
      "duration": "2000ms",
      "loop": false,
      "intensity": 0.8
    },
    "loading": {
      "duration": "2000ms",
      "loop": true,
      "intensity": 0.5
    },
    "alert": {
      "duration": "2000ms",
      "loop": false,
      "intensity": 0.7
    }
  },
  "ngoMode": {
    "colors": {
      "primary": "#6BBF8E",
      "accent": "#5AAC7D"
    },
    "motion": {
      "intensityMultiplier": 0.7,
      "durationMultiplier": 1.3
    }
  },
  "accessibility": {
    "reducedMotion": {
      "intensityMultiplier": 0.3,
      "durationMultiplier": 0.5,
      "disableLoop": true
    },
    "contrastRatios": {
      "text": 4.5,
      "largeText": 3,
      "graphical": 3
    }
  }
}



